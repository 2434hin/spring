<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:batch="http://www.springframework.org/schema/batch"
	xsi:schemaLocation="http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


	<!-- jobrepository -->
	<bean name="jobRepository" class="org.springframework.batch.core.repository.support.MapJobRepositoryFactoryBean">
	</bean>
	
	<!-- joblauncher -->
	<bean name="jobLauncher" class="org.springframework.batch.core.launch.support.SimpleJobLauncher">
		<property name="jobRepository" ref="jobRepository"/>
	</bean>
	
	<!-- 트랜잭션 매니저(형식상) -->
	<bean name="transactionManager" class="org.springframework.batch.support.transaction.ResourcelessTransactionManager"/>
	
	<!-- batch reader, processor, writer 빈 등록 -->
	<bean id="rangerReader" class="kr.or.ddit.batch.simple.RangerReader"/>
	<bean id="rangerProcessor" class="kr.or.ddit.batch.simple.RangerProcessor"/>
	<bean id="rangerWriter" class="kr.or.ddit.batch.simple.RangerWriter"/>
	
	<batch:job id="rangerJob" restartable="true">
		<batch:step id="step1" allow-start-if-complete="true">
			<batch:tasklet>
				<batch:chunk commit-interval="1"
					reader="rangerReader"
					processor="rangerProcessor"
					writer="rangerWriter">
				</batch:chunk>
			</batch:tasklet>
		</batch:step>
	</batch:job>
	
	<bean class="org.springframework.batch.test.JobLauncherTestUtils"/>
</beans>
